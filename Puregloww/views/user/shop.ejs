         function toggleWishlist(productId) {
                        axios.post(`/wishlist/${productId}`)
                            .then(function (response) {
                                console.log(response.data);
                                // Show wishlist status message
                                showWishlistStatusMessage(response.data.message);
            
                                // Update heart icon color based on response
                                const heartIcon = document.querySelector(`#heartIcon_${productId}`);
                                if (response.data.color === true) {
                                    heartIcon.classList.remove('text-dark');
                                    heartIcon.classList.add('text-danger'); // Change to red color
                                } else {
                                    heartIcon.classList.remove('text-danger'); // Change to normal color
                                    heartIcon.classList.add('text-dark');
                                }
                            })
                            .catch(function (error) {
                                console.error('Error:', error);
                            });
                    }

    function showWishlistStatusMessage(message) {
        Toastify({
                            text: message,
                            duration: 2000, // 2000 milliseconds = 2 seconds
                            gravity: 'top', // Position of the toast message
                            position: 'right', // Alignment of the toast message
                            backgroundColor:'green'
                            
                        }).showToast();
    }
     
