            <div class="container py-5">
              
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                          <tr>
                            <% if (usercartdata.length !== 0) { %>
                            <th scope="col">Products</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            
                            <th scope="col">Quantity</th>
                           
                            <!-- <th scope="col">Total</th> -->
