                                        <div class="modal-body" id="StockstatusModalBody" style="margin: auto; color: rgb(224, 37, 37);">
                                            <!-- Wishlist status message will be displayed here -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                   
