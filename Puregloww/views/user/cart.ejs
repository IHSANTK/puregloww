                            <% } %>
                          </tr>
                        </thead>
                        <% if (usercartdata.length === 0) { %>
                            <div class="alert alert-info mt-3" role="alert" style="color: black;display: flex;justify-content: center;font-weight: 700;">
                                Your cart is empty !
                            </div>
                        <% } else { %>
                            <% usercartdata.forEach(product => { %>
                                <tbody>
                                    <tr>
                                        <th scope="row">
                                            <div class="d-flex align-items-center">
                                            <a href="/productveiw/<%= product.productId %>">
                                                <img src="<%= product.image[0] %>" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                                            </a>
                                            </div>
                                        </th>
                                        <td>
                                            <p class="mb-0 mt-4"><%= product.productName %></p>
                                            <% if (product.disable) { %>
                                                <small class="disabled-message text-danger mt-2 "> Not available now</small>
                                            <%  }else if(product.stockcount===0) { %>
                                                <small class="disabled-message text-danger mt-3"> Out Of Stock</small>
                                            <% } %>
                                         
                                        </td>
                                        <td>
                                            <p class="mb-0 mt-4"><%= product.productPrice %></p>
                                        </td>
                                      
                                        <td>
                                            <div class="input-group">
                                                <!-- Minus button -->
                                                <% if (product.quantity > 1) { %>
                                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border mt-4" style="width:30px; height:30px;" onclick="quantityminus('<%= product.productId %>')">
                                                        <i class="fa fa-minus"></i>
                                                    </button>
                                                <% } else { %>
                                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border mt-4" style="width:30px; height:30px;">
                                                        <i class="fa fa-minus"></i>
                                                    </button>
                                                <% } %>
                                                <!-- Quantity value -->
                                                <p class="mb-0 mt-4 mx-2"><%= product.quantity %></p>
                                                <!-- Plus button -->
                                                <button class="btn btn-sm btn-plus rounded-circle bg-light border mt-4" style="width:30px ; height: 30px;" onclick="quantityplus(`<%= product.productId %>`)">
                                                    <i class="fa fa-plus"></i>
                                                </button>
                                            </div>
                                            

                                        </td>
                                        <td>
                                            <!-- Delete button form -->
                                           
                                                <button  class="btn btn-md rounded-circle bg-light border mt-4" onclick="deleteFromcart(`<%= product.productId %>`)">
                                                     <i class="fa fa-times text-danger"></i>
                                                </button>
                                            
                                        </td>
                                    </tr>
                                </tbody>
                            <% }); %>
                        <% } %>
                        
                        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
                        <script>
                            function deleteFromcart(productId) {
                                axios.post(`/deletecartproduct/${productId}`)
                                    .then(function (response) {
                                        console.log(response.data);
                                        // Handle success response, if needed
                                        let total = document.getElementsByClassName('total')
                                        total.innerHTML = response.data
                        
                                        location.reload(); // Reload the page after deletion
                                    })
                                    .catch(function (error) {
                                        console.error('Error deleting product from cart:', error);
                                        // Handle error, if needed
                                    });
                            }
                        
                            function quantityminus(productId) {
                                     axios.post(`/quantityminus/${productId}`)
                                   .then(function (response) {
                                        console.log(response.data);
                                            
                                                   location.reload(); // Reload the page after updating quantity
                           
                     })
                                             .catch(function (error) {
                                                console.error('Error decreasing quantity:', error);
                                         
                     });
                                     }
                            
                            function quantityplus(productId) {
                                axios.post(`/quantityplus/${productId}`)
                                    .then(function (response) {
                                        console.log(response.data);
                                        if(response.data.message){
                                            //  document.getElementById('message').innerHTML = response.data.message;
                                            showStockStatusMessage(response.data.message);
                                            }else{
                                            location.reload(); 
                                            }
                                    })
                                    .catch(function (error) {
                                        console.error('Error increasing quantity:', error);
                                        // Handle error, if needed
                                    });
                            }
                            function showStockStatusMessage(message) {
                          const wishlistModalBody = document.getElementById('StockstatusModalBody');
                           wishlistModalBody.innerHTML = `<p>${message}</p>`;
                           $('#StockstatusModal').modal('show');
                            setTimeout(function() {
                               $('#StockstatusModal').modal('hide');
                            }, 2000); 
                          }  
                        </script>
                            <div class="modal fade" id="StockstatusModal" tabindex="-1" aria-labelledby="wishlistModalLabel" aria-hidden="true">
