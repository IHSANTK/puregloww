      <script>

        function validateForm() {
    var fullName = $("#fullName").val();
    var phoneNumber = $("#phoneNumber").val();

    // Check if any field is empty
    if (fullName === "" || phoneNumber === "") {
        $("#nameError").text("Please fill in all fields.");
        $("#loader").hide(); // Hide loader if form is invalid
        return false;
    } else {
        $("#nameError").text(""); // Clear error message if fields are filled
    } 

    // Check if phone number length is not 10 digits
    if (phoneNumber.length !== 10) {
      $("#nameError").text("Phone number must be 10 digits.");// Show error message
        $("#loader").hide(); // Hide loader if form is invalid
        return false;
    } else {
        $("#phoneError").text(""); // Clear error message if phone number length is correct
    }

    $("#loader").show();

    return true; // Form is valid
}
    </script>
